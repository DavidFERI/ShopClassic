<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pozdrav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242729"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_nova"
    android:layout_centerHorizontal="true"
    android:fitsSystemWindows="true"
    tools:context="com.feri.david.com.shoppingcenter.Pozdrav">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/telefoni"
        android:id="@+id/rokica"
        android:gravity = "bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/druga"
        android:id="@+id/logo"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/obesalnik"
        android:src="@drawable/clothes1"
        app:civ_border_width="5dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:civ_border_color="#303F9F"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/krizec"
        android:id="@+id/krzi"
        android:gravity="center_horizontal"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/moneygreen"
        android:id="@+id/denar"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/klukica"
        android:id="@+id/klukica"
        android:gravity="center_horizontal"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/krzi"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
