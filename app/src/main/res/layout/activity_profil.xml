<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_nova"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#EEEEEE"
    android:paddingTop="@dimen/activity_vertical_margin_nova"
    tools:context="com.feri.david.com.shoppingcenter.Profil">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentTop="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/prikaz"
        android:src="@drawable/profil"
        app:civ_border_width="3dp"
        android:gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        app:civ_border_color="#C8C9E4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ime in priimek:"
        android:id="@+id/ime"
        android:gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|right"
        android:layout_below="@+id/prikaz"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:textColor="#d14343"
        android:textStyle="bold"
        android:textColorHighlight="#ff0000"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:elegantTextHeight="false" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/mail"
        android:gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|right"
        android:layout_below="@+id/prikaz"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_marginTop="95dp" />


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|right"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/mail"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ocene"
            android:id="@+id/ocenjeno"
            android:gravity="center_vertical|center_horizontal"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|right"
            android:textStyle="bold"
            android:layout_alignTop="@+id/linearLayout"
            android:textSize="25dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/ocene"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:textColor="#FFFF00"
            android:shadowColor="#FF0000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|right"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
</RelativeLayout>
